<%- include('../partials/head', { title: 'EatConnect - Berbagi Makanan Berbagi Kebahagiaan' }) %>
<link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Header Section with Hero -->
    <header class="header">
        <!-- Navigation -->
        <nav class="navbar">
            <div class="logo">EatConnect</div>
            <ul class="nav-links">
                <li><a href="/beranda">Beranda</a></li>
                <li><a href="/cara-kerja">Cara Kerja</a></li>
                <li><a href="/edukasi">Edukasi</a></li>
                <li><a href="/tentang">Tentang</a></li>
            </ul>
            <a href="/bergabung" class="bergabung-btn">Bergabung</a>
            <div class="mobile-menu-toggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </nav>

        <!-- Hero Section -->
        <section class="hero">
            <h1>
                Berbagi Makanan<br>
                Berbagi Kebahagiaan
            </h1>
            <p>
                Menghubungkan rumah makan dengan panti asuhan dan pondok pesantren 
                untuk mengurangi food waste dan membantu sesama
            </p>
            <div class="hero-buttons">
                <a href="/mulai-berdonasi" class="btn-primary">Mulai Berdonasi</a>
                <a href="/cara-kerja" class="btn-secondary">Pelajari Selengkapnya</a>
            </div>
        </section>
    </header>

    <!-- Stats Section -->
    <section class="stats">
        <div class="stats-container">
            <div class="stat-item">
                <span class="stat-number">1,750</span>
                <span class="stat-label">PORSI MAKANAN</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">59</span>
                <span class="stat-label">PARTNERSHIP</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">27</span>
                <span class="stat-label">PENERIMA BANTUAN</span>
            </div>
        </div>
    </section>

    <!-- Cara Kerja Section -->
    <section class="cara-kerja">
        <div class="cara-kerja-container">
            <h2 class="section-title">Cara Kerja</h2>
            <div class="steps-container">
                <div class="step-item">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3>Restaurant Berdonasi</h3>
                        <p>Restaurant mendaftarkan makanan berlebih yang masih layak konsumsi melalui platform kami</p>
                    </div>
                </div>
                <div class="step-item">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3>Komunitas Mengambil</h3>
                        <p>Relawan komunitas mengambil makanan dari restaurant sesuai jadwal yang telah ditentukan</p>
                    </div>
                </div>
                <div class="step-item">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3>Distribusi Makanan</h3>
                        <p>Makanan didistribusikan ke panti asuhan, pondok pesantren, dan masyarakat yang membutuhkan</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--Bergabung sesuai peran anda-->
    <section class="bergabung-peran">
        <div class="container">
            <h2 class="section-title">Bergabung Sesuai Peran Anda</h2>
            <div class="peran-cards">
                <div class="peran-card">
                    <div class="peran-icon">
                        <img src="/images/Group.png" alt="Icon Donatur" />
                    </div>
                    <h3>Donatur</h3>
                    <p>Donasikan makanan berlebih Anda dan bantu mengurangi food waste</p>
                    <a href="/daftar-donatur" class="peran-btn">Daftar Sebagai Donatur</a>
                </div>
                <div class="peran-card">
                    <div class="peran-icon">
                        <img src="/Images/fluent-emoji-flat_handshake.png" alt="Icon Relawan" />
                    </div>
                    <h3>Relawan</h3>
                    <p>Bergabung sebagai penghubung antara donatur dan penerima bantuan</p>
                    <a href="/daftar-relawan" class="peran-btn">Daftar Sebagai Relawan</a>
                </div>
                <div class="peran-card">
                    <div class="peran-icon">
                        <img src="/Images/emojione_house.png" alt="Icon Penerima" />
                    </div>
                    <h3>Penerima</h3>
                    <p>Daftarkan lembaga sosial Anda untuk menerima bantuan makananan</p>
                    <a href="/daftar-penerima" class="peran-btn">Daftar Sebagai Penerima</a>
                </div>
            </div>
        </div>   
    </section>

    <!--Fitur Edukasi dan Teknologi-->
    <section class="fitur-edukasi">
        <div class="container">
            <h2 class="section-title">Fitur Edukasi & Teknologi</h2>
            <div class="fitur-cards">
                <div class="fitur-card">
                    <div class="fitur-image">
                        <img src="/Gemini_Generated_Image_l9wwiil9wwiil9ww 2.png" alt="Pelacakan Gizi AI">
                    </div>
                    <div class="fitur-content">
                        <h3>Pelacakan Gizi AI  & Smart Diary Makanan</h3>
                        <p>Website menggunakan AI untuk menganalisis kandungan nutrisi makanan dan memberikan fitur pencatatan, analisis nutrisi otomatis, tracking kalori, dan saran perbaikan pola makan yang dipersonalisasi</p>
                    </div>
                    <div class="fitur-image right">
                        <img src="/Gemini_Generated_Image_l9wwiil9wwiil9ww 2.png" alt="Smart Diary">
                    </div>
                    <div class="fitur-card">
                        <div class="fitur-image">
                            <img src="/Gemini_Generated_Image_kel7yfkel7yfkel7 1.png" alt="Platform Edukasi">
                        </div>
                        <div class="fitur-content">
                            <h3>Platform Edukasi Terintegrasi & Forum Komunitas</h3>
                            <p>Website menyediakan konten edukasi nutrisi, resep sehat, dan video pembelajaran tentang video hidup sehat, serta fitur komunitas untuk berbagi tips, resep dan pengalaman antar pengguna</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- include('../partials/footer') %>